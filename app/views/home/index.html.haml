-# Navbar
%nav.w-full.p-4.bg-white.bottom-0.z-50.absolute{ data: { controller: "navbar"}}

-# Cover
.flex.w-full.h-screen
  .flex.z-50.absolute.w-full.h-screen.justify-center.items-center
    .flex
      %h1.text-6xl.font-bold.text-white="Hermann & Samantha"
  .glide
    .glide__track{"data-glide-el" => "track"}
      %ul.glide__slides
        %li.glide__slide.w-full.h-screen
          = image_tag 'https://placekitten.com/1200/800', class: "w-full h-screen"
        %li.glide__slide.w-full.h-screen
          = image_tag 'https://placekitten.com/1200/800', class: "w-full h-screen"
        %li.glide__slide.w-full.h-screen
          = image_tag 'https://placekitten.com/1200/800', class: "w-full h-screen"
    .glide__arrows{"data-glide-el" => "controls"}
      %button.glide__arrow.glide__arrow--left{"data-glide-dir" => "<"} prev
      %button.glide__arrow.glide__arrow--right{"data-glide-dir" => ">"} next

-# Blocks
