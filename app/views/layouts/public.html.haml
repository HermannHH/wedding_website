!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}
    %title="Hermann & Samantha - 2 May 2020"
    %meta{:content => "Hermann & Samantha - 2 May 2020", :property => "og:title"}
    %meta{:content => "Your personal link to our wedding page", :property => "og:description"}
    %meta{:content => "https://ik.imagekit.io/nhrknfxy8/cover_D8yZnqPX5I.JPG?tr=w-500:w-1200,h-630,cm-extract", :property => "og:image"}
    %meta{:content => "https://hermantha.com", :property => "og:url"}
    %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon", :sizes => "180x180"}
    %link{:href => "/favicon-32x32.png", :rel => "icon", :sizes => "32x32", :type => "image/png"}
    %link{:href => "/favicon-16x16.png", :rel => "icon", :sizes => "16x16", :type => "image/png"}
    %link{:href => "/site.webmanifest", :rel => "manifest"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %script{:src => "https://api.mapbox.com/mapbox.js/v3.2.1/mapbox.js"}
    %link{:href => "https://api.mapbox.com/mapbox.js/v3.2.1/mapbox.css", :rel => "stylesheet"}
  %body{ data: { controller: "body" }}
    .fixed.w-full.h-screen.bg-white.flex.z-50.justify-center.items-center{ data: { target: "body.loader" }}
      .flex.flex-col.justify-center.items-center
        .my-12
          = image_tag "https://ik.imagekit.io/nhrknfxy8/icon-pantene_aUHF0cUf4.svg", width: "200"
        .h-12.relative.w-full
          .text-center.tracking-wide{ data: { target: "body.typed" }}
        -# .text-3xl.text-gray-600="#hermantha2020"
    %div{ data: { target: "body.content" }}= yield
    -# = yield
