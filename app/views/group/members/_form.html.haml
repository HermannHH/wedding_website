= form_for @group_member do |f|
  - if @group_member.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group_member.errors.count, "error")} prohibited this group_member from being saved:"
      %ul
        - @group_member.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :group
    = f.text_field :group
  .actions
    = f.submit 'Save'
